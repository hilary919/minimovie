<!--pages/article/article.wxml-->
<import src="./article-item/article-item-template.wxml"></import>
<view>
  <swiper indicator-dots="true" indicator-color="#fff" autoplay="true">
    <swiper-item>
      <image src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{content}}" wx:for-item="item" wx:for-index="i">
    <view bindtap="onItemTap" data-id="{{item.postId}}">
      <template is="news" data="{{...item}}"></template>
    </view>
  </block>
</view>