/* pages/article/article-detail/article-detail.wxss */
.banner {
  position: relative;
}

.hide {
  opacity: 0;
}

.header-img {
  width: 100%;
  height: 460rpx;
}

.music-wrap {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}

.music-img {
  width: 102rpx;
  height: 110rpx;
}

.content {
  padding: 20rpx 30rpx;
}

.content-header {
  margin-bottom: 60rpx;
  border-bottom: 1px solid #e5e5e5;
}

.author-intros {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  margin: 0 10rpx;
  color: #666
}

.date {
  margin-left: 10rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tools {
  text-align: right;
  margin-bottom: -55rpx;
}

.tools image {
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}

.content-body{
  color: #666;
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  text-align: justify;
}